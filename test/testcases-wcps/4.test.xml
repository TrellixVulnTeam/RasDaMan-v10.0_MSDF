<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ProcessCoveragesRequest xmlns='http://www.opengis.net/wcps/1.0'
          schemaLocation='http://schemas.opengis.net/wcps/1.0 wcpsProcessCoverages.xsd' service="WCS" version="1.1.2">
    <query>
        <xmlSyntax>
            <coverageIterator>
                <iteratorVar>c</iteratorVar>
                <coverageName>rgb</coverageName>
            </coverageIterator>
            <encode>
                <cast>
                    <mult>
                        <greaterThan>
                            <minus>
                                <div>
                                    <fieldSelect>
                                        <field>
                                            <name>1</name>
                                        </field>
                                        <coverage>c</coverage>
                                    </fieldSelect>
                                    <cast>
                                        <type>float</type>
                                        <plus>
                                            <fieldSelect>
                                                <field>
                                                    <name>1</name>
                                                </field>
                                                <coverage>c</coverage>
                                            </fieldSelect>
                                            <fieldSelect>
                                                <field>
                                                    <name>1</name>
                                                </field>
                                                <coverage>c</coverage>
                                            </fieldSelect>
                                        </plus>
                                    </cast>
                                </div>
                                <div>
                                    <fieldSelect>
                                        <coverage>c</coverage>
                                        <field>
                                            <name>1</name>
                                        </field>
                                    </fieldSelect>
                                    <cast>
                                        <type>float</type>
                                        <plus>
                                            <fieldSelect>
                                                <coverage>c</coverage>
                                                <field>
                                                    <name>1</name>
                                                </field>
                                            </fieldSelect>
                                            <fieldSelect>
                                                <coverage>c</coverage>
                                                <field>
                                                    <name>1</name>
                                                </field>
                                            </fieldSelect>
                                        </plus>
                                    </cast>
                                </div>
                            </minus>
                            <numericConstant>0.6</numericConstant>
                        </greaterThan>
                        <numericConstant>255</numericConstant>
                    </mult>
                    <type>char</type>
                </cast>
                <format>png</format>
            </encode>
        </xmlSyntax>
    </query>
</ProcessCoveragesRequest>
