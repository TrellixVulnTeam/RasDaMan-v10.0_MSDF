<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ProcessCoveragesRequest xmlns='http://www.opengis.net/wcps/1.0'
          schemaLocation='http://schemas.opengis.net/wcps/1.0 wcpsProcessCoverages.xsd' service="WCS" version="1.1.2">
    <query>
        <xmlSyntax>
            <coverageIterator>
                <iteratorVar>c</iteratorVar>
                <coverageName>rgb</coverageName>
            </coverageIterator>
            <encode>
                <cast>
                    <trim>
                        <abs>
                            <minus>
                                <fieldSelect>
                                    <coverage>c</coverage>
                                    <field>
                                        <name>1</name>
                                    </field>
                                </fieldSelect>
                                <fieldSelect>
                                    <coverage>c</coverage>
                                    <field>
                                        <name>0</name>
                                    </field>
                                </fieldSelect>>
                            </minus>
                        </abs>
                        <axis>x</axis>
                        <lowerBound>
                            <numericConstant>0</numericConstant>
                        </lowerBound>
                        <upperBound>
                            <numericConstant>450</numericConstant>
                        </upperBound>
                        <axis>y</axis>
                        <lowerBound>
                            <numericConstant>0</numericConstant>
                        </lowerBound>
                        <upperBound>
                            <numericConstant>300</numericConstant>
                        </upperBound>
                    </trim>
                    <type>char</type>
                </cast>
                <format>png</format>
            </encode>
        </xmlSyntax>
    </query>
</ProcessCoveragesRequest>
