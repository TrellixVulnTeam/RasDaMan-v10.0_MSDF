<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ProcessCoveragesRequest xmlns='http://www.opengis.net/wcps/1.0'
          schemaLocation='http://schemas.opengis.net/wcps/1.0 wcpsProcessCoverages.xsd' service="WCS" version="1.1.2">
    <query>
        <xmlSyntax>
            <coverageIterator>
                <iteratorVar>m</iteratorVar>
                <coverageName>Modis</coverageName>
            </coverageIterator>
            <encode>
                <slice>
                    <coverage>m</coverage>
                    <axis>x</axis>
                    <slicingPosition>
                        <numericConstant>100</numericConstant>
                    </slicingPosition>
                </slice>
                <format>jpeg</format>
            </encode>
        </xmlSyntax>
    </query>
</ProcessCoveragesRequest>
