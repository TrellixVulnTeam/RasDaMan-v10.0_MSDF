<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ProcessCoveragesRequest xmlns='http://www.opengis.net/wcps/1.0'
          schemaLocation='http://schemas.opengis.net/wcps/1.0 wcpsProcessCoverages.xsd' service="WCS" version="1.1.2">
    <query>
        <xmlSyntax>
            <coverageIterator>
                <iteratorVar>c</iteratorVar>
                <coverageName>rgb</coverageName>
            </coverageIterator>
            <encode>
                <format>png</format>
                <trim>
                    <coverage>c</coverage>
                    <axis>x</axis>
                    <lowerBound>
                        <numericConstant>0</numericConstant>
                    </lowerBound>
                    <upperBound>
                        <numericConstant>450</numericConstant>
                    </upperBound>
                    <axis>y</axis>
                    <lowerBound>
                        <numericConstant>0</numericConstant>
                    </lowerBound>
                    <upperBound>
                        <numericConstant>300</numericConstant>
                    </upperBound>
                </trim>
            </encode>
        </xmlSyntax>
    </query>
</ProcessCoveragesRequest>
