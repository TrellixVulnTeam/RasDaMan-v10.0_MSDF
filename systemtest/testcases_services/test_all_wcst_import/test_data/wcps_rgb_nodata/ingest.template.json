{
  "config": {
    "service_url": "PETASCOPE_URL",
    "tmp_directory": "/tmp/",
    "crs_resolver": "SECORE_URL/",
    "default_crs": "SECORE_URL/crs/EPSG/0/4326",
    "mock": false,
    "automated": true,
    "track_files": false
  },
  "input": {
    "coverage_id": "test_rgb_nodata",
    "paths": [
      "*.png"
    ]
  },
  "recipe": {
    "name": "general_coverage",
    "options": {
      "coverage": {
        "crs": "OGC/0/Index2D",
        "metadata": {
          "type": "json",
          "global": {
	    "description": "'This file has 3 different nodata values for bands and they could be fetched implicitly.'",
            "resolution": "'1'"
          }
        },
        "slicer": {
          "type": "gdal",
          "bands": [
            {
              "identifier": "red",
              "name": "red",
	      "description": "${gdal:minY} + ${gdal:maxY}"
	      
            }, {
              "identifier": "red",
              "name": "green",
	      "description": "${gdal:minX} + ${gdal:maxX}"
            }, {
              "identifier": "red",
              "name": "blue",
	      "description": "${gdal:maxX} + ${gdal:minX}"
            }
          ],
          "axes": {
            "j": {
              "min": "${gdal:maxY}",
              "max": "${gdal:minY}",
              "resolution": "-1"
            },
            "i": {
              "min": "${gdal:minX}",
              "max": "${gdal:maxX}",
              "resolution": "${gdal:resolutionX}"
            }
          }
        }
      },
      "tiling": "ALIGNED [0:1023, 0:1023] TILE SIZE 4194304"
    }
  }
}
