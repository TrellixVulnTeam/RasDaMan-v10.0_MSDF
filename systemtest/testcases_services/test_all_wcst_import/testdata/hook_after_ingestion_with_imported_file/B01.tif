{
  "config": {
    "service_url": "http://localhost:8082/rasdaman/ows",
    "tmp_directory": "/tmp/",
    "mock": false,
    "track_files": true,
    "skip": true,
    "automated": true
  },
  "input": {
    "coverage_id": "test_hook_after_ingestion_with_imported_file",
    "paths": [
      "*.tif"
    ]
  },
  "recipe": {
    "name": "map_mosaic",
    "options": {
      "wms_import": true
    }
  },
  "hooks": [
    {
      "description": "warp input file to /tmp dir",
      "when": "before_ingestion",
      "cmd": " gdalwarp '${file:dir_path}/'*.tif '/tmp/${file:name}' -overwrite",
      "abort_on_error": false,
      "replace_path": ["/tmp/${file:name}"]
    }, {
        "description": "remove temp file which was imported",
        "when": "after_ingestion",
        "cmd": "rm -f '${imported_file:path}'"
      }
  ]
}
